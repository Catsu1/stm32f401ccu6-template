{
    "version": 10,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "description": "Base preset intended for inheritance",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/arm-none-eabi-gcc.cmake",
            "cacheVariables": {
                "CMAKE_C_STANDARD": "11",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_VERBOSE_MAKEFILE": "ON"
            }
        },
        {
            "name": "debug",
            "inherits": "base",
            "displayName": "Debug",
            "description": "Debug | Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_ASM_FLAGS_DEBUG": "-g",
                "CMAKE_C_FLAGS_DEBUG" : "-g -Og"
            }         
        },
        {
            "name": "release",
            "inherits": "base",
            "displayName": "Release",
            "description": "Release | Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_ASM_FLAGS_RELEASE": "-O2",
                "CMAKE_C_FLAGS_RELEASE" : "-O2"
            }         
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ]
}